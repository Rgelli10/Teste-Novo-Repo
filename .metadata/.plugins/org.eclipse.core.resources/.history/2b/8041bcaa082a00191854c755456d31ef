package course;

import javax.swing.JOptionPane;

public class Program {

	public static void main(String[] args) {
		
		double userDigit = Integer.parseInt(JOptionPane.showInputDialog("Enter a number: "));
		double squadreRaiz = Math.sqrt(userDigit);
	
	while(userDigit >= 0.0) {
		JOptionPane.showMessageDialog(null, "The squadre raiz is: %2f" + squadreRaiz);
		userDigit = Integer.parseInt(JOptionPane.showInputDialog("Enter a number: "));
	}JOptionPane.showMessageDialog(null, "Negative Number.");
			
	
	}
	
	
}
